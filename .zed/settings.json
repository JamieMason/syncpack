{
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy",
        },
      },
    },
  },
  "formatter": {
    "external": {
      "command": "node_modules/.bin/biome",
      "arguments": ["format", "--stdin-file-path", "{buffer_path}"],
    },
  },
  "languages": {
    "Rust": {
      "formatter": "language_server",
    },
  },
}
