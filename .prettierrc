{
  "arrowParens": "always",
  "printWidth": 100,
  "proseWrap": "always",
  "quoteProps": "consistent",
  "singleQuote": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["**/*.spec.*"],
      "options": {
        "printWidth": 120
      }
    },
    {
      "files": ["**/*.md", "**/*.mdx"],
      "options": {
        "printWidth": 500,
        "proseWrap": "never"
      }
    }
  ]
}
